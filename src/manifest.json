{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "Averages",
  "author": "Frederik Shull",
  "description": "Converts YouTube shorts to normal video URLs.",
  "homepage_url": "https://github.com/zlyfer/averages",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": ["*://*/*"],
  "permissions": ["tabs", "storage"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "action": {
    "default_title": "Averages",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "64": "icons/64.png",
      "128": "icons/128.png",
      "256": "icons/256.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js",
    "module": true
  }
}
